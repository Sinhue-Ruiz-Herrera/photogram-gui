

<h1> <%= @the_user.username%> </h1>

<dl>
  <dt>ID</dt>
  <dd>42</dd>

   <dt>Edit user</dt>
    <dd>
    <form action="/update_user/<% @the_user.id%>" >
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_new_username" placeholder="Enter a username..." value="<%= @the_user.username %>">
      <input id="browser_username" type="hidden" name="input_old_username" value="<%= @the_user.username %>">
      <button>Update user</button>
    </form>
  </dd>
</dl>


<h2>Own photos (<%= @the_user.own_photos.count %>)</h2>
<table border="1">
<tr>
  <th> Image </th>

  <th> Owner </th>

  <th> Caption </th>

  <th> Posted </th>

  <th> </th>
</tr>

<%  @the_user.own_photos.each do |foto|%>
<tr>
  <td>
  <img src="<%= foto.image%>"> </td>

  <td>
   <%#= User.where({ :id => foto.owner_id}).at(0).username%>
    
    <%= foto.poster.username%>  </td>
  <td> <%= foto.caption%> </td>

  <td> <%= foto.created_at%> </td>
 <td>
<a href="/photos/<%= foto.id %>">
  Show details </a>
  </td>
</tr>
<%end%>
</table>




