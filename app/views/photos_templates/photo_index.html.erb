<h1>List of photos</h1>

<hr>

<form action="/insert_photo"> 
<label for="image_box">Image</label>
    <input id="image_box"type="text" name="query_image" placeholder="Enter a URL for the image...">

<label for="caption_box">Caption</label>
    <textarea id="caption_box" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

    <label for ="owner_id_box">Owner ID</label>

    <input id="owner_id_box" type="text" name="query_owner_id" placeholder="Enter and ID of a User">

    <button>Add Photo</button>

</form>

<hr>
<table border="1">
<tr>
  <th>
    Image
  </th>
   
   <th>
     Caption
  </th>

   <th>
      Owner 
  </th>

   <th>
      Posted
  </th>
  <th> </th>
</tr>
<% @list_of_photos.each do |fotografia| %>

<tr>
<td> <img src="<%= fotografia.image%>"> </td>
<td> <%= fotografia.caption %> </td>
<td> <%= fotografia.poster.username%> </td>
<td> <%= fotografia.created_at%> </td>
<td>
 <a href="/photos/<%= fotografia.id %>">
 Show Details</td>


</tr>
<% end%>
</table>
